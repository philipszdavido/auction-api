{
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "deploy:infura": "tsc & node dist/src/infura/deploy/index.js",
    "compile:infura": "tsc & node dist/src/infura/compile/compile.js",
    "deploy:ignition": "npx hardhat ignition deploy ./ignition/modules/SimpleAuction.ts --network localhost",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "compile": "npx hardhat compile",
    "deploy:alchemy": "npx hardhat run scripts/deploy.ts --network alchemy",
    "deploy:local": "npx hardhat run scripts/deploy.ts --network localhost",
    "test:unit": "jest --testPathPattern=__tests__/unit --coverage",
    "test:integration": "jest --testPathPattern=__tests__/integration --runInBand --coverage",
    "test": "jest --testPathPattern=__tests__/unit --runInBand --coverage & jest --testPathPattern=__tests__/integration --runInBand ----detectOpenHandles --coverage",
    "test:contract": "npx hardhat test",
    "start:node": "npx hardhat node"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "jsonwebtoken": "^9.0.2",
    "solc": "^0.8.25",
    "web3": "^4.6.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-ignition": "^0.15.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
    "@nomicfoundation/hardhat-verify": "^2.0.5",
    "@nomicfoundation/ignition-core": "^0.15.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.12",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.27",
    "@types/supertest": "^6.0.2",
