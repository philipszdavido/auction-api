{
  "version": 2,
  "public": false,

  "github": {
    "enabled": true
  },
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.js"
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/src" }]
}
